<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Promotion_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/noto_regular"
            android:includeFontPadding="false"
            android:id="@+id/title_question_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/category_question_tv"
            android:ellipsize="end"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_regular"
            android:includeFontPadding="false"
            android:text="카테고리"
            android:textColor="@color/gray"
            android:layout_marginEnd="16dp"
            android:id="@+id/category_question_tv"
            app:layout_constraintTop_toTopOf="@id/title_question_tv"
            app:layout_constraintBottom_toBottomOf="@id/title_question_tv"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/contents_question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:fontFamily="@font/noto_regular"
            android:includeFontPadding="false"
            android:text="게시물 내용"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_question_tv" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:src="@color/line_gray"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>